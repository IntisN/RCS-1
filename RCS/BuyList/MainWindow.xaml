<Window x:Class="BuyList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BuyList"
        mc:Ignorable="d"
        Title="Pirkumu saraksta aplikācija" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="BuyListItemName" HorizontalAlignment="Left" Height="81" Margin="10,10,0,0" TextWrapping="Wrap" TextAlignment="Center" Text="" VerticalAlignment="Top" Width="266"/>
        <Button x:Name="AddListItemButton" Click="AddListItemButton_Click" Content="Pievienot pirkumu" HorizontalAlignment="Left" Margin="85,96,0,0" VerticalAlignment="Top" Width="116"/>
        <TextBlock x:Name="BuyItemName" HorizontalAlignment="Left" Margin="10,121,0,0" TextWrapping="Wrap" Text="Rezultāts" VerticalAlignment="Top" RenderTransformOrigin="-0.41,-2.736" Height="22" Width="266"/>
        <ScrollViewer Margin="281,10,9.667,60.667">
            <ItemsControl x:Name="BuyItemsListControl"/>
        </ScrollViewer>
        <Button Content="Nodzēst sarakstu" Click="Button_Click" HorizontalAlignment="Left" Margin="352,277,0,0" VerticalAlignment="Top" Width="112" RenderTransformOrigin="0.453,6.989"/>

    </Grid>
</Window>
